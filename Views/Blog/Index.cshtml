@using WebCoSo.Models
@{
    ViewBag.Title = "Index";

    BaiViet x = ViewData["BaiCanXem"] as BaiViet;
}
<div class="hero-wrap hero-bread" style="background-image: url(../Content/images/logo3.jpg);">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href='@Url.Action("Index","Home")'>Trang chủ</a></span></p>
                <h1 class="mb-0 bread">Bài viết</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 ftco-animate">
                <div class="sidebar-box">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon ion-ios-search"></span>
                            <input type="text" class="form-control" placeholder="Search...">
                        </div>
                    </form>
                </div>
                @{
                    foreach (BaiViet k in CosoKtpm.getArticle(6))
                    {
                        <div class="col-md-12 d-flex ftco-animate">
                            <div class="blog-entry align-self-stretch d-md-flex">
                                <div class="thumb">
                                    <img src="@k.HinhDD" alt="" />
                                </div>
                                <div class="text d-block pl-md-4">
                                    <div class="date">
                                        <p>@string.Format("{0: dd MMMM yyyy}", k.NgayDang) in <a href="#">@(k.LoaiTin.Equals("QC")?"Quảng cáo":"Tin tức")</a></p>
                                    </div>
                                    <div class="meta mb-3">
                                        <div><a href="#">@k.TenBV</a></div>
                                        <div><a href="#" class="meta-chat"><span class="icon-chat"></span> 3</a></div>
                                    </div>
                                    <h3 class="heading"> @k.NdTomTat<a href="#"></a></h3>
                                    <p></p>
                                    <p><a href="#" class="btn btn-default py-2 px-3">@k.NoiDung</a></p>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
