@using WebCoSo.Models
@{
    ViewBag.Title = "Index";
    List<SanPham> ds = ViewData["DanhSachSP"] as List<SanPham>;
}
<style>
    form {
        display: inline;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sản phẩm đang kinh doanh</h1>
            </div>
            <div class="col-sm-6" style="text-align:right">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("Index","Dashboard")'>Home</a></li>
                    <li class="breadcrumb-item active">Sản phẩm đang kinh doanh</li>

                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Mã SP</th>
                                <th>Tên SP</th>
                                <th>Nội dung</th>
                                <th>NSX</th>
                                <th>Ngày đăng</th>
                                <th>DVT</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                int n = 1;
                                foreach (SanPham i in ds)
                                {
                                    <tr>
                                        <td>@i.MaSP</td>
                                        <td>@i.TenSP</td>
                                        <td>@i.NdTomTat</td>
                                        <td>@i.ThuongHieu</td>
                                        <td>@i.NgayDang</td>
                                        <td>@i.DVT</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
