@using WebCoSo.Models
@model WebCoSo.Models.LoaiSP

@{ ViewBag.Title = "Index";
    List<LoaiSP> list = ViewData["DsLoai"] as List<LoaiSP>; }

<style>
    form {
        display: inline;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chủng loại - Ngành hàng</h1>
            </div>
            <div class="col-sm-6" style="text-align:right">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("Index","Dashboard")'>Trang chủ</a></li>
                    <li class="breadcrumb-item active">Loại hàng</li>

                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-8" style="background-color:white">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Danh sách loại hàng hóa</h3>
                </div>
                <div class="box">
                    <!-- /.car-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã loại</th>
                                    <th>Tên loại hàng</th>
                                    <th>Số sản phẩm</th>
                                    <th>Nhóm lệnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (LoaiSP i in list)
                                {
                    <tr>
                        <td>@i.MaLoai</td>
                        <td>@i.TenLoai</td>
                        <td>@i.SanPhams.Where(x => x.MaLoai == i.MaLoai).Count() Sản phẩm</td>
                        <td>
                            @using (Html.BeginForm("Delete", "CategoryProducts", FormMethod.Post))
                            {
                                <input type="hidden" name="maLoai" value="@i.MaLoai" />
                                <button class="btn btn-danger">Xóa</button>
                            }
                            @using (Html.BeginForm("Update", "CategoryProducts", FormMethod.Post))
                            {
                            <input type="hidden" name="maLoaiCS" value="@i.MaLoai" />
                                <button class="btn btn-primary">Chỉnh sửa</button>
                            }
                        </td>
                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.car-body -->
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-4" style="background-color:snow">
            @using (Html.BeginForm("Index", "CategoryOfProducts", FormMethod.Post))
            {
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin chính</h3>
    </div>
    <div class="card-body">
        <div class="form-validation">
            <div class="form-group">
                <label for="val-username">Tên sản phẩm</label>
                @Html.TextBoxFor(m => m.TenLoai, new { @class = "form-control", @id = "val-username", @name = "val-username", @placeholder = "Nhập tên sản phẩm...." })
            </div>
            <div class="form-group">
                <label for="val-suggestions">Nội dung</label>
                @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", @row = "11", @id = "val-suggestions", @name = "val-suggestions", @rows = "5", @placeholder = "Nhập nội dung..." })
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success">Lưu thông tin</button>
            </div>
        </div>
    </div>
</div>
                @Html.HiddenFor(x => x.MaLoai)}

        </div>

    </div>
    <!-- /.row -->
</section>