
@using WebCoSo.Models;
@{
    ViewBag.Title = "Index";
    List<KhachHang> ds = ViewData["DanhSachKH"] as List<KhachHang>;
}
<style>
    form {
        display: inline;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin khách hàng</h1>
            </div>
            <div class="col-sm-6" style="text-align:right">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href='@Url.Action("Index","Dashboard")'>Home</a></li>
                    <li class="breadcrumb-item active">Thông tin khách hàng</li>

                </ol>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Mã KH</th>
                                <th>Tên khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int n = 1;
                                foreach (KhachHang i in ds)
                                {
                                    <tr>
                                        <td>@i.MaKH</td>
                                        <td>@i.TenKH</td>
                                        <td>@i.SDT</td>
                                        <td>@i.Email</td>
                                        <td>@i.DiaChi</td>
                                        <td>@i.NgaySinh</td>
                                        <td>
                                            @if (i.GioiTinh == true)
                                            {<p>Nam</p>}
                                            else
                                            {
                                                {<p>Nữ</p>}
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
